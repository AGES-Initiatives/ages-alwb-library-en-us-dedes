{'id_' : 'pe|d084_en_US_dedes|peVE|Stichera01|mode', 'text' : 'Mode 1.'}
{'id_' : 'pe|d084_en_US_dedes|peVE|Stichera01|melody', 'text' : 'Idiomelon.'}
